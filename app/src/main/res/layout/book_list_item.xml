<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:item_selected="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_selected"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    item_selected:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">



    <ImageView
      android:id="@+id/bookCover"
      android:layout_width="100dp"
      android:layout_height="120dp"
      android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

     <TextView
         android:id="@+id/bookTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Book Title"
         android:textSize="18sp"
         android:textStyle="bold"
         android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@drawable/rate_background"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/averageRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="12sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingTop="1dp"
                android:paddingLeft="2dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>